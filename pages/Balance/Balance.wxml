
  <block wx:for="{{goods}}"  wx:key="id" wx:for-index="index">
  <i-row>
    <i-col span="1" i-class="col-class" offset="1">
        <checkbox bind:tap="switchSelect" checked="{{item.isSelect}}" data-index="{{index}}"></checkbox>
    </i-col>
    <i-col span="6" i-class="col-class">
        <image src="" style="height:50px;width:50px;" bind:tap="backtogoods"></image>
    </i-col>
    <i-col span="6" i-class="col-class">
        <i-row>
          {{item.name}}
        </i-row>
        <i-row>
          <text class="moneytype">￥{{item.price}}</text>
        </i-row>
    </i-col>
    <i-col span="10" i-class="col-class">
    <i-input-number value="{{item.num}}" min="0" max="100" bindchange="changeNum" ids="{{index}}"/>
    </i-col>
  </i-row>
  </block>

 <i-row>
   <i-col span="22" offset="1">
     <textarea placeholder='卖家留言' class="txtarea"></textarea>
   </i-col>
 </i-row>



 <i-divider ></i-divider>

<i-row>
    <i-col span="22">
     <i-row>
        <i-col span="12" offset="1">{{address.addressName}}</i-col>
        <i-col span="11">{{address.addressPhone}}</i-col>
     </i-row>
     <i-row>
       <i-col span="12" offset="1">{{address.addressArea}}</i-col>
       <i-col span="11">{{address.addressDetails}}   </i-col>
     </i-row>
    </i-col>
    <i-col span="2">
     <i-row>
      <i-icon type="enter" size="38" color="#80848f" bind:tap="toggletoaddress"/>
      </i-row>
    </i-col> 
</i-row>

 <i-divider></i-divider>


   <i-row>
      <i-col span="19" i-class="col-class" offset="1">
        商品金额
      </i-col>
      <i-col span="4" i-class="col-class">
         <text class="moneytype">￥{{totalPrice}}</text>
      </i-col>
   </i-row>
   <i-divider></i-divider>
   <i-row>
     <i-col span="21" offset="1">
       优惠方式：
     </i-col>
     <i-col span="2">
       <i-icon type="enter" size="25" color="#80848f"/>
     </i-col>
   </i-row>
   <i-row>
      <text>暂无</text>
   </i-row>
   <i-divider></i-divider>
   <i-row>
      <i-col span="19" i-class="col-class" offset="1">
        运费
      </i-col>
      <i-col span="4" i-class="col-class">
          <text>包邮</text>
      </i-col>
   </i-row>
  <i-divider></i-divider>

<view title="付款方式">
    <i-radio-group current="{{current}}" bindchange="handlechange">
        <i-radio wx:for="{{saletype}}"  wx:key="{{item.id}}" value="{{item.name}}" position="{{left}}">
        </i-radio>
    </i-radio-group>
</view>

  <i-divider></i-divider>

<view class="fixbottom">
  <i-row>
    <i-col span="4" i-class="col-class" offset="1">
        合计：
    </i-col>
    <i-col span="4" i-class="col-class" offset="1">
        <text class="moneytype">￥{{totalPrice}}</text>
    </i-col>
    <i-col span="7" i-class="col-class" offset="7">
       <view bind:tap="payForGoods" type="success" inline="true">
          去付款
        </view>
    </i-col>
  </i-row>
</view>
