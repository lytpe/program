<view>
  <block wx:for="{{goods}}"  wx:key="id">
     <i-row>
        <i-col span="1" i-class="col-class" offset="1">
           <checkbox bind:tap="switchSelect" data-id="{{item.id}}" checked="{{isCheck}}"></checkbox>
        </i-col>
          
        <i-col span="6" i-class="col-class">
           <image src="{{item.picture}}" style="height:50px;width:50px;" bind:tap="backtogoods"></image>
        </i-col>
        <i-col span="6" i-class="col-class">
            <i-row>
              {{item.name}}
            </i-row>
            <i-row>
               {{item.price}}
            </i-row>
        </i-col>
        <i-col span="10" i-class="col-class">
  <i-input-number value="{{num}}" min="0" max="100" bindchange="handlechanges" ids="{{item.id}}"/>
        </i-col>
     </i-row>
  </block>
</view>

<view>
 <i-row>
   <i-col span="22" offset="1">
     <textarea placeholder='卖家留言' ></textarea>
   </i-col>
 </i-row>

</view>


<i-row>
    <i-col span="22">
     <i-row>
        <i-col span="8">{{address.addressName}}</i-col>
        <i-col span="16">{{address.addressPhone}}</i-col>
     </i-row>
     <i-row>
       <i-col span="12">{{address.addressArea}}</i-col>
       <i-col span="12">{{address.addressDetails}}   </i-col>
     </i-row>
    </i-col>
    <i-col span="2">
      <i-icon type="enter" size="28" color="#80848f" bind:tap="toggletoaddress"/>
    </i-col>
</i-row>


<view>
   <i-row>
      <i-col span="19" i-class="col-class" offset="1">
        商品金额
      </i-col>
      <i-col span="4" i-class="col-class">
          ￥4
      </i-col>
   </i-row>
   <i-row>
      <i-col span="19" i-class="col-class" offset="1">
        运费
      </i-col>
      <i-col span="4" i-class="col-class">
          ￥4
      </i-col>
   </i-row>
</view>
<view>
   <i-panel title="付款方式">
    <i-radio-group current="{{current}}" bindchange="handlechange">
        <i-radio wx:for="{{saletype}}"  wx:key="{{item.id}}" value="{{item.name}}" position="{{left}}">
        </i-radio>
    </i-radio-group>
</i-panel>
</view>
<i-panel title="空白">
 <text>空白</text>
 <text>空白</text>
</i-panel>
<i-panel class="fixbottom">
  <i-row>
  
    <i-col span="4" i-class="col-class" offset="1">
        合计：
    </i-col>
    <i-col span="4" i-class="col-class" offset="1">
        ￥{{totalPrice}}
    </i-col>
    <i-col span="7" i-class="col-class" offset="7">
       <i-button bind:click="payForGoods" type="success" inline="true">
          去付款
        </i-button>
    </i-col>
  </i-row>
</i-panel>
