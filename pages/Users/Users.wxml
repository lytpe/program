<!--pages/Users/Users.wxml-->
<view style="background-image:url('{{link}}');" class="bg">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
   <text class="userinfo-nickname">{{userInfo.nickName}}</text>
   <text>something</text>
</view>

<view class="info_list">
    <view wx:for="{{userListInfo}}" wx:key="item">
        <view wx:if="{{item.text=='联系客服'}}" class="weui_cell">
            <view class="weui_cell_hd">
                <image src="{{item.icon}}"></image>
            </view>

            <view class="weui_cell_bd">
               <contact-button type="default-light" size="15" session-from='weapp'>{{item.text}}</contact-button>
            </view>
     </view>


        <view  wx:else class="weui_cell" bindtap="directto" data-links="{{item.link}}">
            <view class="weui_cell_hd">
                <image src="{{item.icon}}"></image>
            </view>
            <view class="weui_cell_bd">
              <text class="txtstyle" decode="{{true}}">&emsp;{{item.text}} </text>
            </view>
            <view wx:if="{{item.isunread}}" class="badge">
                 {{item.unreadNum}}
            </view>
        </view>
      
    </view>
  </view>
