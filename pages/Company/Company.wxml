<!--pages/Company/Company.wxml-->

  <i-row>
  <i-col span="24">
    <image  src="{{link}}" style="width:100%;"></image>
    </i-col>
  </i-row>
  
  <i-row>
    <i-col span="20" offset="2">
      <text>{{text}}</text>
    </i-col>
  </i-row>

  <i-row>
    <i-col span="8" offset="8" class="textalign">申请预约</i-col>
  </i-row>
<i-row>
  <i-col span="20" offset="2">
  <form bindsubmit="FormSubmit" bindreset="FormReset">
  
   <picker mode="date" value="{{dateValue}}" start="2018-01-01" end="2999-12-12" bindchange="dateBindChange">
        <i-row class="textalign">
          <i-col span="12">日期选择: </i-col>
          <i-col span="12">{{dateValue}}</i-col>
        </i-row>
</picker>

     <picker mode="time" name="times" value="{{time}}" start="00:00" end="23:59" bindchange="timeBindChange">
      <i-row class="textalign">
      <i-col span="12">时间选择: </i-col>
      <i-col span="12">{{time}}</i-col>
      </i-row>
      </picker>
  <i-row>
       <view>
     <i-col span="18" offset="3">
     <textarea placeholder="预约细节" placeholder-class="textalign" auto-focus name="message"/>
     </i-col>
     </view>
  </i-row>
  
  <i-row class="hidden">
   <i-col>
      <input type="text" value="{{userInfo.nickName}}" name="userName"/>
   </i-col>
  </i-row>

  <i-row>
    <i-col span="16" offset="4" class="textalign">
      <button type="primary" form-type="submit">立即预约         </button>
    </i-col>
  </i-row>
  </form>
  </i-col>
</i-row>
